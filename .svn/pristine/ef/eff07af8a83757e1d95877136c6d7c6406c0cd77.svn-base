#-*- coding:utf-8 -*-
from aw import *

'''
用例标题:DLNA暂停/播放功能touch验证
预置条件：
1.已安装QQ音乐apk
2.QQ音乐本地中已存在至少一首歌曲
3.mcu串口线发送CLI执行生效
测试步骤：
1.启动QQ音乐应用
2.切换DLNA模式播放歌曲
3.歌曲暂停
4.歌曲继续播放
预期结果：
1.能正常启动应用
3.speaker能够暂停播放
4.speaker能够继续播放
'''

class TestScript(unittest.TestCase):
    def setUp(self):
        print('返回主界面，清除cli指令')
        Common(SUBDUT1).goBackHome()
        Common(DUT).sendSetCliConmand("clf c")

    def step1(self):
        print("步骤1.启动QQ音乐应用")
        Common(SUBDUT1).startActivity(activity_name=CONST.PKGNAME.QQMUSIC,timeOut=5)
        result = Checkpoint(SUBDUT1).checkIfExist("检测点1:进入QQ音乐",text=CONST.TEXT.MUSIC_MUSEUM)
        Logger.info("检测点1：能正常启动应用")
        self.assertEqual(result, True)

    def step2(self):
        print("步骤2.切换DLNA模式播放歌曲")
        Common(SUBDUT1).clickById(id=CONST.ID.QQMUSIC_PLAY_SONG_ICON)  # click local song icon(left-bottom)
        QQMusic(SUBDUT1).switchDlnaMode()
        Common().wait(5)  #wait switch DLNA!
        QQMusic(SUBDUT1).switchPlayStatus()
        Common().wait(20)  # play song for 20s

    def step3(self):
        print("步骤3.歌曲暂停")
        Common(DUT).sendSetCliConmand("button ms")
        Common().wait(2)
        Common(DUT).sendGetCliConmand("b")
        playstatus = Common(DUT).getCliConmandResult("b","mfb")
        Logger.info("检测点3：音响音乐暂停")
        self.assertEqual(playstatus, CONST.TOUCHLEDSTATUS.MFB_LIGHT_HALF)

    def step4(self):
        print("步骤4.歌曲继续播放")
        Common(DUT).sendSetCliConmand("button ms")
        Common().wait(2)
        Common(DUT).sendGetCliConmand("b")
        playstatus = Common(DUT).getCliConmandResult("b", "mfb")
        Logger.info("检测点3：音响音乐播放")
        self.assertEqual(playstatus, CONST.TOUCHLEDSTATUS.MFB_LIGHT_FULL)

    def step5(self):
        print("步骤5.点击暂停键,为收尾做准备")
        QQMusic(SUBDUT1).switchPauseStatus()  # click pause button

    def test_step(self):
        self.step1()
        self.step2()
        self.step3()
        self.step4()
        self.step5()

    def tearDown(self):
        print("收尾:返回主界面")
        Common(SUBDUT1).goBackHome()

if __name__ == "__main__":
    unittest.main()
